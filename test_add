# test_add.py
import unittest
from add import add

class Testadd(unittest.TestCase):

    def test_add(self):
        # Test addition functionality
        result = self.add.add(3, 7)
        self.assertEqual(result, 10)
        
        result = self.add.add(-1, 1)
        self.assertEqual(result, 0)
        
        result = self.add.add(-1, -1)
        self.assertEqual(result, -2)

if _name_ == '_main_':
    unittest.main()
